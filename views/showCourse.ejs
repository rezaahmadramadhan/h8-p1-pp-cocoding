<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Kursus</title>
    
    <style>
        .course-card {
            transition: transform 0.3s;
            height: 100%;
        }
        .course-card:hover {
            transform: translateY(-5px);
        }
        .course-img {
            height: 200px;
            object-fit: cover;
        }
        .price-tag {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(0,0,0,0.7);
            color: white;
            padding: 5px 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <%- include('_navbar') %>

<div class="container">
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <form method="get" action="/courses">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-4">
                            <input name="search" type="text" class="form-control" placeholder="Search course...">
                        </div>

                        <div class="col-md-3">
                            <select name="cat" class="form-select">
                                <option value="">Semua Kategori</option>
                                <% data.forEach(el => { %>
                                    <option value="<%= el.Category.name %>"><%= el.Category.name %></option>
                                <% }) %>
                            </select>
                        </div>

                        <div class="col-md-2">
                            <button class="btn btn-primary w-100">Filter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row g-4">
        <% data.forEach(el => { %> 
        <div class="col-md-4">
            <div class="card course-card shadow-sm">
                <div class="position-relative">
                    <img src="<%= el.img %>" class="card-img-top course-img" alt="Course Image">
                    <div class="price-tag"><%= formatRp(el.price) %></div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="badge bg-primary"><%= el.Category.name %></span>
                        <small class="text-muted"><i class="fas fa-clock"></i> <%= el.duration %> Jam</small>
                    </div>
                    <h5 class="card-title"><%= el.name %></h5>
                    <p class="card-text text-muted"><%= el.desc %></p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="rating">
                            <i class="fas fa-star text-warning"></i>
                            4.9
                        </div>
                        <a href="/courses/<%= el.id %>/detail" class="btn btn-outline-primary">Lihat Detail</a>
                    </div>
                </div>
            </div>
        </div>        
        <% }) %>
    </div>
</div>

<nav class="container my-5">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link">Previous</a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>

<%- include('_styling') %>
</body>
</html>