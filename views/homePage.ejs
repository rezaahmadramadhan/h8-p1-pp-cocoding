    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Code Learning Platform</title>
    
    <style>
        .hero-section {
            background-color: #2B3252;
            padding: 100px 0;
            color: white;
        }
        
        .category-card {
            transition: transform 0.3s;
            border: none;
            border-radius: 15px;
        }
        
        .category-card:hover {
            transform: translateY(-5px);
        }
        
        .footer {
            background-color: #2B3252;
            color: white;
            padding: 50px 0;
        }
    </style>
</head>
<body>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/courses">Courses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/courses/add">Add Courses</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-primary ms-2" href="/login">Login/SignUp</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container text-center">
        <h1 class="display-4 mb-4">Mulai Karirmu sebagai Developer Profesional</h1>
        <p class="lead mb-4">Belajar coding online dengan kurikulum industri dan dapatkan sertifikasi resmi</p>
        <button class="btn btn-warning btn-lg">Mulai Belajar Sekarang</button>
    </div>
</section>

<!-- Categories Section -->
<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-5">Kategori Kelas Populer</h2>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card category-card h-100 shadow">
                    <div class="card-body">
                        <i class="fas fa-mobile-alt fa-3x text-primary mb-3"></i>
                        <h5>Mobile Development</h5>
                        <p>Belajar membuat aplikasi Android dan iOS</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card category-card h-100 shadow">
                    <div class="card-body">
                        <i class="fas fa-code fa-3x text-success mb-3"></i>
                        <h5>Web Development</h5>
                        <p>Kuasa teknologi front-end dan back-end</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card category-card h-100 shadow">
                    <div class="card-body">
                        <i class="fas fa-cloud fa-3x text-info mb-3"></i>
                        <h5>Cloud Computing</h5>
                        <p>Pelajari teknologi cloud terbaru</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Us Section -->
<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2>Kenapa Memilih Kami?</h2>
                <ul class="list-unstyled">
                    <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i>Kurikulum berbasis industri</li>
                    <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i>Sertifikasi resmi</li>
                    <li class="mb-3"><i class="fas fa-check-circle text-success me-2"></i>Instruktur berpengalaman</li>
                </ul>
                <button class="btn btn-outline-primary">Pelajari Selengkapnya</button>
            </div>
        </div>
    </div>
</section>

